{
  "expo": {
    "name": "Camera Expo",
    "description": "App para lidar com a camera do celular usando a API de Camera do Expo",
    "slug": "camera-expo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#B853E2"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.leandroazanniel.cameraexpo",
      "buildNumber": "1.0.0"
    },
    "android": {
      "package": "com.leandroazanniel.cameraexpo",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "CAMERA_ROLL",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#B853E2"
      }
    }
  }
}
